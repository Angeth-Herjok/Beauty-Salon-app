<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <ImageView
        android:id="@+id/ivFirstImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvfirst"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/tvfirst"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="66dp"
        android:text="Haven Beauty Spa"
        android:textColor="#5F0B6E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivViewbar"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPerson"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_perm_identity_24" />

    <ImageView
        android:id="@+id/ivPerson"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toStartOf="@+id/ivViewbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_view_headline_24" />

    <ImageView
        android:id="@+id/ivGirl"
        android:layout_width="156dp"
        android:layout_height="144dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ivGirl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstImage"
        app:srcCompat="@drawable/img_1" />

    <ImageView
        android:id="@+id/ivGirl2"
        android:layout_width="157dp"
        android:layout_height="141dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivGirl"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstImage"
        app:srcCompat="@drawable/img_2" />

    <ImageView
        android:id="@+id/ivGirl3"
        android:layout_width="170dp"
        android:layout_height="131dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGrtext4"
        app:srcCompat="@drawable/img_3" />

    <TextView
        android:id="@+id/tvGrtext4"
        android:layout_width="114dp"
        android:layout_height="29dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:text="Services"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvGirltext3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGirl" />

    <TextView
        android:id="@+id/tvGirltext3"
        android:layout_width="107dp"
        android:layout_height="29dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:text="Products"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvGrtext4"
        app:layout_constraintTop_toBottomOf="@+id/ivGirl2" />

    <TextView
        android:id="@+id/tvGirltext"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="148dp"
        android:text="Specialist"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGirl3" />

    <Button
        android:id="@+id/tvProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="273dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="50dp"
        android:text="Click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGirltext3" />

</androidx.constraintlayout.widget.ConstraintLayout>