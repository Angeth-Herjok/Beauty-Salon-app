<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Braids">

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="72dp"
        android:text="Braids"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivKing"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:srcCompat="@drawable/img_23" />

    <ImageView
        android:id="@+id/ivBrazilia"
        android:layout_width="122dp"
        android:layout_height="104dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/ivAlaska"
        app:layout_constraintStart_toEndOf="@+id/ivKing"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:srcCompat="@drawable/img_22" />

    <ImageView
        android:id="@+id/ivAlaska"
        android:layout_width="96dp"
        android:layout_height="102dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazilia"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:srcCompat="@drawable/img_24" />

    <ImageView
        android:id="@+id/ivBrazil"
        android:layout_width="146dp"
        android:layout_height="221dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@+id/cbCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText3"
        app:srcCompat="@drawable/img_22" />

    <TextView
        android:id="@+id/tvText3"
        android:layout_width="77dp"
        android:layout_height="29dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:text="Kingky"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivKing" />

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="89dp"
        android:layout_height="28dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="28dp"
        android:text="Brazilian"
        android:textColor="#090808"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvText3"
        app:layout_constraintTop_toBottomOf="@+id/ivBrazilia" />

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Alaska"
        android:textColor="#070404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvText2"
        app:layout_constraintTop_toBottomOf="@+id/ivAlaska" />

    <TextView
        android:id="@+id/tvText4"
        android:layout_width="103dp"
        android:layout_height="31dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="253dp"
        android:text="Brazilian"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBrazil" />

    <TextView
        android:id="@+id/tvLength"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:text="Length"
        android:textColor="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazil"
        app:layout_constraintTop_toBottomOf="@+id/tvText1" />

    <CheckBox
        android:id="@+id/cbCheckBox"
        android:layout_width="106dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:text="Long"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazil"
        app:layout_constraintTop_toBottomOf="@+id/tvLength" />

    <CheckBox
        android:id="@+id/cbCheckBox3"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="74dp"
        android:text="Texture"
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazil"
        app:layout_constraintTop_toBottomOf="@+id/cbCheckBox" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="65dp"
        android:text="Color"
        android:textColor="#040303"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazil"
        app:layout_constraintTop_toBottomOf="@+id/cbCheckBox3" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:text="Cancel"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnProceed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText4" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="28dp"
        android:text="Proceed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />

    <CheckBox
        android:id="@+id/cbCheckBox5"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="57dp"
        android:text="1"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrazil"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />

    <CheckBox
        android:id="@+id/cbCheckBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="62dp"
        android:text="2"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvText4"
        app:layout_constraintTop_toBottomOf="@+id/cbCheckBox5" />

</androidx.constraintlayout.widget.ConstraintLayout>